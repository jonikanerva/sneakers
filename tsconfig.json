{
  "compilerOptions": {
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "pretty": true,
    "rootDir": "app",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": ["app/**/*.ts"],
  "compileOnSave": true
}
