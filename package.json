{
  "name": "sneakers",
  "version": "1.0.0",
  "description": "sneakers!",
  "main": "build/app/server.js",
  "repository": "github.com",
  "author": "Jhonny <jhonny@jhonny.org>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "12.18.4"
  },
  "scripts": {
    "start": "node build/server.js",
    "s": "run-p touch watch:build watch:compile",
    "build": "run-s build:*",
    "build:clean": "rm -rf build",
    "build:client": "webpack --mode production --config-name client",
    "build:server": "webpack --mode production --config-name server",
    "build:worker": "webpack --mode production --config-name worker",
    "test": "jest",
    "touch": "mkdir build 2>/dev/null; touch build/server.js",
    "lint": "yarn lint:tslint && yarn lint:prettier",
    "lint:prettier": "prettier --check --parser typescript --config package.json '**/*.ts'",
    "lint:tslint": "tslint --project .",
    "watch:test": "jest --watchAll --coverage=false",
    "watch:build": "nodemon --watch build --exec 'yarn start'",
    "watch:compile": "webpack --mode development --watch",
    "worker": "node build/fetchAndStore.js",
    "docker:build": "docker build -t docker.pkg.github.com/jonikanerva/dok8s/sneakers:latest .",
    "docker:push": "docker push docker.pkg.github.com/jonikanerva/dok8s/sneakers:latest",
    "deploy": "run-s docker:build docker:push"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsdom": "^16.4.0",
    "lodash": "^4.17.21",
    "luxon": "^1.25.0",
    "ramda": "^0.27.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-visibility-observer": "^1.0.4",
    "redis": "^3.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/jsdom": "^16.2.4",
    "@types/lodash": "^4.14.161",
    "@types/luxon": "^1.25.0",
    "@types/node": "^14.11.5",
    "@types/ramda": "^0.27.20",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/redis": "^2.8.27",
    "@types/supertest": "^2.0.10",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^6.2.0",
    "css-loader": "^4.3.0",
    "cssnano": "^4.1.10",
    "hard-source-webpack-plugin": "^0.13.1",
    "jest": "^26.5.0",
    "mini-css-extract-plugin": "^0.11.3",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^4.0.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "source-map-loader": "^1.1.0",
    "style-loader": "^1.3.0",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-node-externals": "^2.5.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  }
}
